{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "build",
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "typeRoots": [
            "./typings",
            "./node_modules/@types",
        ],
    },
    "exclude": [
        "*.spec.ts"
    ]
}